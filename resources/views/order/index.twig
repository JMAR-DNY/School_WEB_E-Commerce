{% extends 'templates/app.twig' %}

{% block content %}
    <form action"{{ path_for('order.create') }}" method="post" autocomplete="off">
        <div class="row">

            <div class ="col-md-8">

                <div class="row">

                    <div class ="col-md-6">
                    
                        <h3>Your Details</h3>

<!--EMAIL/////////////////////////////////////////////////-->
                            <div class="form-group {% if errors.email %} has-error {% endif %}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" class="form-control" value="{{ old.email }}" maxlength="100">
                            </div>
                            {% if errors.email %}
                                <span class="help-block">
                                    {{ errors.email | first }}
                                </span>
                            {% endif %}                            
<!--NAME/////////////////////////////////////////////////-->
                            <div class="form-group {% if errors.name %} has-error {% endif %}">
                            <label for="name">Full Name</label>
                            <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}" maxlength="100">
                            </div>
                            {% if errors.name %}
                                <span class="help-block">
                                    {{ errors.name | first }}
                                </span>
                            {% endif %}
                     
                    </div>
                    <div class ="col-md-6">

                        <h3>Shipping address</h3>
<!--address1/////////////////////////////////////////////////-->                 
                            <div class="form-group {% if errors.address1 %} has-error {% endif %}">
                            <label for="address1">Address Line1</label>
                            <input type="text" name="address1" id="address1" class="form-control"  value="{{ old.address1 }}" maxlength="100">        
                            </div>
                            {% if errors.address1 %}
                                <span class="help-block">
                                    {{ errors.address1 | first }}
                                </span>
                            {% endif %}
<!--address2/////////////////////////////////////////////////-->
                            <div class="form-group {% if errors.address2 %} has-error {% endif %}">
                            <label for="address2">Address Line2</label>
                            <input type="text" name="address2" id="address2" class="form-control"  value="{{ old.address2 }}" maxlength="100">        
                            </div>
                            {% if errors.address2 %}
                                <span class="help-block">
                                    {{ errors.address2 | first }}
                                </span>
                            {% endif %}
<!--city/////////////////////////////////////////////////-->
                            <div class="form-group {% if errors.city %} has-error {% endif %}">
                            <label for="city">City</label>
                            <input type="text" name="city" id="city" class="form-control"  value="{{ old.city }}" maxlength="100">        
                            </div>  
                            {% if errors.city %}
                                <span class="help-block">
                                    {{ errors.city | first }}
                                </span>
                            {% endif %}
<!--state/////////////////////////////////////////////////-->
                            <div class="form-group {% if errors.state %} has-error {% endif %}">
                            <label for="state">State</label>
                            <input type="text" name="state" id="state" class="form-control"  value="{{ old.state }}" maxlength="25">        
                            </div>  
                            {% if errors.state %}
                                <span class="help-block">
                                    {{ errors.state | first }}
                                </span>
                            {% endif %}
<!--zip/////////////////////////////////////////////////-->
                            <div class="form-group {% if errors.zip %} has-error {% endif %}">
                            <label for="zip">Zip Code</label>
                            <input type="text" name="zip" id="zip" class="form-control"  value="{{ old.zip }}"maxlength="15">        
                            </div>
                            {% if errors.zip %}
                                <span class="help-block">
                                    {{ errors.zip | first }}
                                </span>
                            {% endif %}
                    </div>

                </div>
            
                <h3> Payment </h3>                   
                    <div id="payment"></div>
                        <!-- INSERT gateway here-->
                        <img src="../resources/images/payment.jpg">
                    </div>

            <div class ="col-md-4">

                <div class="well">
                    <h4>Your order</h4>
                   
                    {% include 'cart/partials/contents.twig' %}
                    {% include 'cart/partials/summary.twig' %}

                    <button type="submit" class="btn btn-success btn-send">Place order</button>
                </div>

            </div>

    </div>

    </form>

{% endblock %}



{% block scripts %}



    
{% endblock %}